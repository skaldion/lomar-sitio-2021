<!-- Modal -->
<div class="modal fade" id="contact-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form name='contacto-lomar' action='/exito' method='POST' data-netlify='true' class='needs-validation' novalidate>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="emailInput">Email</label>
                        <input name='email' type="email" class="form-control" id="emailInput" aria-describedby="emailHelp" required=''>
                        <div class="invalid-feedback">
                            Escribe tu cuenta de correo electrónico.
                        </div>
                        <small id="emailHelp" class="form-text text-muted">Nunca compartiremos tu información con nadie.</small>
                    </div>
                    <div class="form-group">
                        <label for="nombreInput">Nombre <span class="text-muted">(Opcional)</span></label>
                        <input name='nombre' type="text" class="form-control" id="nombreInput">
                    </div>
                    <div class="form-group">
                        <label for="modal-pregunta">Preguntas <span class="text-muted">(Opcional)</span></label>
                        <textarea name='preguntas' class="form-control" id="modal-pregunta" aria-describedby="pregunta"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </form>
        </div>
    </div>
</div>
