<section class="side-image-block <%- additionalClasses %>">
    <div class="container">
        <div class="row">
            <div class="col-lg image">
                <img src="<%- image.src %>" alt="<%- image.alt %>">
            </div>
            <div class="col-sm content">
                <h2><%- heading %></h2>
                <% description.forEach((paragraph) => { %>
                    <p><%- paragraph %></p>
                <% }); %>
            </div>
        </div>
    </div>
</section>