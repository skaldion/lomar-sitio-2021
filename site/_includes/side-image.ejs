<section class="side-image white-bg">
    <div class="container">
        <div class="row">
            <div class="col-sm">
                <img src="<%- image.src %>" alt="<%- image.alt %>">
            </div>
            <div class="col-sm">
                <h3><%- heading %></h3>
                <% description.forEach((paragraph) => { %>
                    <p><%- paragraph %></p>
                <% }); %>
            </div>
        </div>
    </div>
</section>